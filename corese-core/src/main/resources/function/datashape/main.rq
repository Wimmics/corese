function sh:initsetup() {
   sh:setup() ; 
   let (select * where {
            optional { [] xsh:nodeDetail ?node }
            optional { [] xsh:booleanDetail ?bool }
        }) {
        if (bound(?node), sh:setup(xsh:nodeDetail, ?node), true) ;
        if (bound(?bool), sh:setup(xsh:booleanDetail, ?bool), true) ;        
    }
}

function sh:setup(name, value) {
    xt:set(sh:setup(), name, value)
}

function sh:setup(name) {
    xt:get(setup, name)
}

function sh:hasSetup(name) {
