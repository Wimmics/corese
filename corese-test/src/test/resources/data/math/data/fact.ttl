@prefix m:  <http://ns.inria.fr/2013/math#>

m:ex3
  m:label "My favourite equation";
  m:author "JL";
  m:problems (m:InverseProblem) ;
  m:applications (m:Engineering) ;
  m:kind (m:Algebraic);
  
  
a m:Sigma  ;

  m:var  [m:name "n"] ;
  m:from 0 ;
  m:to   [m:name "p"] ;

m:args (

# 1/n!

[a m:Div ; m:args(
  [a m:Power ; m:args(
    [m:name "x"; m:index "n"]
    2
  )] 
  
  [a m:Factorial ; m:args (
      [a m:Minus ; m:args(
        [m:name "x"; m:index "n"]
	1
	)] 
    )] 
)] 
)



