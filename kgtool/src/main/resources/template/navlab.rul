  <h2>"""  str(?label) """</h2> 
  </div>
  <p>
  <table>
  <tr class='top'>
  <td>
  """
  
  if (?icon = "", "", 
    st:call-template(st:icon, ?label, ?icon)  )
 
  """
  </td><td>&nbsp;<td/><td>
